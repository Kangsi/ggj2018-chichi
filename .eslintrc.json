{
  "parser": "babel-eslint",
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "rules": {
    "import/no-unresolved": [2],
    "semi": [2, "always"],
    "comma-dangle": 0
  },
  "globals": {
    "__DEV__": true,
    "phaser": true,
    "game": true,
    "PlayFab": true,
    "PlayFabClientSDK": true,
    "FBInstant": true
  },
  "settings": {
    "import/core-modules": ["phaser", "pixi", "p2"]
  }
}
